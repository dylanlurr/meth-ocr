{
    "version": 2,
    "builds": [{
            "src": "meth-backend/app.py",
            "use": "@vercel/python"
        },
        {
            "src": "meth-frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "meth-frontend/build"
            }
        }
    ],
    "routes": [{
            "src": "/api/(.*)",
            "dest": "meth-backend/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "meth-frontend/build/$1"
        }
    ],
    "functions": {
        "meth-backend/app.py": {
            "runtime": "python3.9",
            "maxDuration": 30
        }
    }
}